/* components/image-uploader/image-uploader.wxss */

.image-uploader {
  width: 100%;
}

/* 上传区域 */
.upload-area {
  border: 4rpx dashed #4A90E2;
  border-radius: 32rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  background: #FFFFFF;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.upload-area.dragging {
  border-color: #FFD05B;
  background: #FFFBF0;
  transform: scale(1.02);
}

.upload-area:active {
  transform: scale(0.98);
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #888888;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.image-item {
  width: calc(50% - 12rpx);
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
}

/* 状态标识 */
.status-badge {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

.status-badge.ready {
  background: #52C41A;
}

.status-badge.processing {
  background: #4A90E2;
}

.status-badge.completed {
  background: #52C41A;
}

.status-badge.error {
  background: #FF4D4F;
}

/* 进度条 */
.progress-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: #4A90E2;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: #FFFFFF;
  font-size: 20rpx;
}

/* 图片信息 */
.image-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.image-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.image-size {
  font-size: 22rpx;
  color: #888888;
}

/* 添加更多按钮 */
.add-more-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  border: 2rpx dashed #E5E5E5;
  border-radius: 24rpx;
  background: #FAFAFA;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.add-more-btn:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.add-icon {
  font-size: 48rpx;
  color: #4A90E2;
  font-weight: 300;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 26rpx;
  color: #888888;
}

/* 批量操作 */
.batch-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: 2rpx solid #E5E5E5;
  background: #FFFFFF;
  color: #666666;
}

.action-btn.primary {
  background: #4A90E2;
  color: #FFFFFF;
  border-color: #4A90E2;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 动画效果 */
.image-item {
  animation: fadeInScale 0.4s ease-out;
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 响应式适配 */
@media screen and (max-width: 600rpx) {
  .image-item {
    width: 100%;
  }
}