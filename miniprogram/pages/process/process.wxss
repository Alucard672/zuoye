/* pages/process/process.wxss */

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 处理状态头部 */
.process-header {
  margin-bottom: 40rpx;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.image-count {
  font-size: 28rpx;
  color: #888888;
  background: #F0F0F0;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 进度条 */
.progress-container {
  display: flex;
  align-items: center;
}

.progress {
  flex: 1;
  height: 8rpx;
  background: #E5E5E5;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2, #5BA0F2);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
  min-width: 60rpx;
}

/* 已选择图片缩略图 */
.thumbs-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

.thumb-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: 220rpx;
  gap: 16rpx;
}

.thumb-item {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F8F9FB;
  position: relative;
  border: 2rpx solid transparent;
}

.thumb-item.active {
  border-color: #4A90E2;
}

.thumb-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 删除徽标 */
.thumb-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(255, 80, 80, 0.95);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(255,80,80,0.3);
  z-index: 1;
}

/* 图片预览区域 */
.preview-section {
  margin-bottom: 40rpx;
}

.image-container {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.image-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.image-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}

.image-label.enhanced {
  color: #4A90E2;
}

.image-size {
  font-size: 24rpx;
  color: #999999;
}

.image-wrapper {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F8F9FB;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 16rpx;
}

.preview-image.enhanced {
  border: 2rpx solid #4A90E2;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(74, 144, 226, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载动画 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5E5;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 对比箭头 */
.compare-arrow {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 16rpx 0;
}

.arrow-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.arrow-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 优化标识 */
.enhancement-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(74, 144, 226, 0.9);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
}

.badge-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 处理选项 */
.process-options {
  margin-bottom: 40rpx;
}

.option-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.option-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.option-item:last-child {
  margin-bottom: 0;
}

.option-item.active {
  background: rgba(74, 144, 226, 0.1);
  border: 2rpx solid #4A90E2;
}

.option-icon {
  margin-right: 24rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.option-content {
  flex: 1;
}

.option-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #888888;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 40rpx;
}

.processing-info {
  text-align: center;
  padding: 40rpx;
}

.loading-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4A90E2;
  animation: bounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  } 40% {
    transform: scale(1);
  }
}

.processing-text {
  font-size: 28rpx;
  color: #4A90E2;
}

.button-group {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 28rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background: #4A90E2;
  color: #FFFFFF;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #4A90E2;
  color: #4A90E2;
}

/* 全屏蒙层：处理中禁止操作 */
.overlay-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.15);
  z-index: 998;
}

/* 居中悬浮进度卡片 */
.progress-float {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
}

.progress-card {
  width: 90%;
  max-width: 720rpx;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(6rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  padding: 40rpx 32rpx;
  text-align: center;
  border: 2rpx solid #EAEAEA;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.progress-inline {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.progress-mini {
  width: 100%;
  height: 24rpx;
  background: #E5E5E5;
  border-radius: 12rpx;
  overflow: hidden;
}

.progress-mini-bar {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2, #5BA0F2);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-mini-text {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 500;
  min-width: 72rpx;
  text-align: right;
}

.progress-desc {
  font-size: 24rpx;
  color: #666;
}

/* 手动旋转按钮 */
.rotate-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
}

.mini-btn {
  padding: 2rpx 10rpx;
  font-size: 18rpx;
  border-radius: 12rpx;
  border: 2rpx solid #4A90E2;
  color: #4A90E2;
  background: #FFFFFF;
  min-width: 120rpx;
}

/* 处理提示 */
.tips-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}