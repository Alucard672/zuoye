/* pages/result/result.wxss */

.container {
  padding: 40rpx;
  min-height: 100vh;
}

/* 结果头部 */
.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.success-icon {
  margin-bottom: 24rpx;
}

.icon-large {
  width: 120rpx;
  height: 120rpx;
}

.success-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #888888;
}

/* 图片对比展示 */
.comparison-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.comparison-tabs {
  display: flex;
  background: #F0F0F0;
  border-radius: 24rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #4A90E2;
  color: #FFFFFF;
}

/* 对比模式 */
.comparison-view {
  margin-bottom: 32rpx;
}

.image-pair {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.image-item {
  flex: 1;
  text-align: center;
}

.image-label {
  display: block;
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 16rpx;
}

.image-label.enhanced {
  color: #4A90E2;
  font-weight: 500;
}

.compare-image {
  width: 100%;
  max-height: 300rpx;
  border-radius: 16rpx;
  border: 2rpx solid #E5E5E5;
}

.compare-image.enhanced {
  border-color: #4A90E2;
}

.vs-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #FFD05B;
  border-radius: 50%;
  margin: 0 16rpx;
}

.vs-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 优化结果模式 */
.optimized-view {
  text-align: center;
}

.optimized-image-container {
  margin-bottom: 32rpx;
}

.optimized-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 16rpx;
  border: 2rpx solid #4A90E2;
  margin-bottom: 24rpx;
}

.image-info {
  background: #F8F9FB;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.info-value.success {
  color: #52C41A;
}

/* 多图切换 */
.image-navigation {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.nav-dots {
  display: flex;
  gap: 12rpx;
}

.nav-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #E5E5E5;
  transition: all 0.3s ease;
}

.nav-dot.active {
  background: #4A90E2;
  transform: scale(1.2);
}

.nav-text {
  font-size: 24rpx;
  color: #888888;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 40rpx;
}

.primary-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.secondary-actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 24rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #4A90E2;
  color: #FFFFFF;
}

.btn-accent {
  background: #FFD05B;
  color: #333333;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #4A90E2;
  color: #4A90E2;
}

.btn-ghost {
  background: #F8F9FB;
  color: #666666;
  border: 2rpx solid #E5E5E5;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 满意度评价 */
.feedback-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 32rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.star {
  font-size: 48rpx;
  color: #E5E5E5;
  transition: all 0.3s ease;
}

.star.active {
  color: #FFD05B;
  transform: scale(1.1);
}

.rating-text {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 使用提示 */
.tips-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  background: #FFFFFF;
  border-radius: 32rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 40rpx;
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.share-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
}

.share-options {
  display: flex;
  gap: 40rpx;
}

.share-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 16rpx;
  border-radius: 24rpx;
  background: #F8F9FB;
  transition: all 0.3s ease;
}

.share-option:active {
  background: #E8F4FD;
}

.share-icon {
  width: 64rpx;
  height: 64rpx;
}

/* 动画效果 */
.comparison-section,
.action-section,
.feedback-section {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}