/* pages/result/result.wxss */

.container {
  padding: 24rpx;
  min-height: 100vh;
}

/* 结果头部 */
.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.success-icon {
  margin-bottom: 24rpx;
}

.icon-large {
  width: 120rpx;
  height: 120rpx;
}

.success-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #888888;
}

/* 图片对比展示 */
.comparison-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.comparison-tabs {
  display: flex;
  background: #F0F0F0;
  border-radius: 24rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #4A90E2;
  color: #FFFFFF;
}

/* 对比模式 */
.comparison-view {
  margin-bottom: 32rpx;
}

.image-pair {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.image-item {
  flex: 1;
  text-align: center;
}

.image-label {
  display: block;
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 16rpx;
}

.image-label.enhanced {
  color: #4A90E2;
  font-weight: 500;
}

.compare-image {
  width: 100%;
  max-height: 300rpx;
  border-radius: 16rpx;
  border: 2rpx solid #E5E5E5;
}

.compare-image.enhanced {
  border-color: #4A90E2;
}

.vs-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #FFD05B;
  border-radius: 50%;
  margin: 0 16rpx;
}

.vs-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 优化结果模式 */
.optimized-view {
  text-align: center;
}

.optimized-image-container {
  margin-bottom: 32rpx;
}

.optimized-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 16rpx;
  border: 2rpx solid #4A90E2;
  margin-bottom: 24rpx;
}

.image-info {
  background: #F8F9FB;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.info-value.success {
  color: #52C41A;
}

/* 多图切换 */
.image-navigation {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

/* 缩略图勾选网格 */
.select-section {
  margin-top: 16rpx;
}

.select-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: flex-start;
}

.select-item {
  width: calc((100% - 24rpx) / 3); /* 三列自适应 */
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative; /* 使序号徽标/勾选框可绝对定位 */
}

.checkbox-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  z-index: 3;
}

.order-badge {
  position: absolute;
  /* 居中到缩略图中间 */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  min-width: 56rpx;
  height: 56rpx;
  padding: 0 12rpx;
  border-radius: 28rpx;
  background: rgba(74, 144, 226, 0.92);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 56rpx;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.25);
  z-index: 5;
}

.select-thumb {
  width: 100%;
  height: 180rpx; /* 更紧凑的缩略图高度 */
  border-radius: 12rpx;
  border: 2rpx solid #E5E5E5;
  background: #F8F9FB;
}

.nav-dots {
  display: flex;
  gap: 12rpx;
}

.nav-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #E5E5E5;
  transition: all 0.3s ease;
}

.nav-dot.active {
  background: #4A90E2;
  transform: scale(1.2);
}

.nav-text {
  font-size: 24rpx;
  color: #888888;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 24rpx;
}

.primary-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.secondary-actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 24rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #4A90E2;
  color: #FFFFFF;
}

.btn-accent {
  background: #FFD05B;
  color: #333333;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #4A90E2;
  color: #4A90E2;
}

.btn-ghost {
  background: #F8F9FB;
  color: #666666;
  border: 2rpx solid #E5E5E5;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 满意度评价 */
.feedback-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 32rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.star {
  font-size: 48rpx;
  color: #E5E5E5;
  transition: all 0.3s ease;
}

.star.active {
  color: #FFD05B;
  transform: scale(1.1);
}

.rating-text {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 使用提示 */
.tips-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  background: #FFFFFF;
  border-radius: 32rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 40rpx;
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.share-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
}

.share-options {
  display: flex;
  gap: 40rpx;
}

.share-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 16rpx;
  border-radius: 24rpx;
  background: #F8F9FB;
  transition: all 0.3s ease;
}

.share-option:active {
  background: #E8F4FD;
}

.share-icon {
  width: 64rpx;
  height: 64rpx;
}

/* 动画效果 */
.comparison-section,
.action-section,
.feedback-section {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 版本号底部展示 */
.version-footer {
  margin-top: 24rpx;
  padding: 24rpx 0;
  text-align: center;
  color: #888888;
  font-size: 24rpx;
}

/* 保存区 */
.vault-section {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 24rpx;
  margin: 16rpx 0 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.vault-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.vault-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.vault-sub {
  font-size: 24rpx;
  color: #999;
}

.vault-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.vault-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vault-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  border: 2rpx solid #E5E5E5;
  background: #F8F9FB;
  flex-shrink: 0;
}

.vault-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.vault-name {
  font-size: 28rpx;
  color: #333;
}

.vault-time,
.vault-size {
  font-size: 24rpx;
  color: #888;
}
.vault-time {
  font-weight: 600; /* 日期加粗 */
}

.vault-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.btn.mini {
  min-width: 140rpx;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: transparent;
  border: 2rpx solid #E5E5E5;
  color: #666;
}

.btn.mini.save {
  border-color: #4A90E2;
  color: #4A90E2;
}

.btn.mini.forward {
  border-color: #52C41A;
  color: #52C41A;
}

.btn.mini.clear {
  border-color: #ff7a45;
  color: #ff7a45;
}

.btn.mini.danger {
  border-color: #ff4d4f;
  color: #ff4d4f;
}