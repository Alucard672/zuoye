<!--pages/index/index.wxml-->
<view class="container">
  <!-- 头部标题区域 -->
  <view class="header">
    <view class="logo-area">
      <image class="logo" src="../../images/logo.png" mode="aspectFit" bindload="onIconLoad" binderror="onIconError" data-name="logo"></image>
      <text class="app-name">作业清晰</text>
    </view>

<!-- 版本号底部展示 -->
<view class="version-footer">
  <text>版本 v{{version || '1.4.2'}}</text>
</view>
    <text class="subtitle">清晰作业，一键打印</text>
  </view>

  <!-- 功能入口卡片 -->
  <view class="upload-options">
    <!-- 从聊天记录选择 -->
    <view class="option-card" bindtap="chooseFromChat">
      <view class="card-icon">
        <image src="../../images/chat-icon.png" class="icon-large" mode="aspectFit" bindload="onIconLoad" binderror="onIconError" data-name="chat-icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">从聊天记录选择</text>
        <text class="card-desc">选择微信聊天中的作业照片</text>
      </view>
      <view class="card-arrow">
        <text class="arrow">></text>
      </view>
    </view>

    <!-- 从相册选择 -->
    <view class="option-card" bindtap="chooseFromAlbum">
      <view class="card-icon">
        <image src="../../images/album-icon.png" class="icon-large" mode="aspectFit" bindload="onIconLoad" binderror="onIconError" data-name="album-icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">从相册选择</text>
        <text class="card-desc">从手机相册中选择照片</text>
      </view>
      <view class="card-arrow">
        <text class="arrow">></text>
      </view>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="bottom-tips">
    <view class="tip-item">
      <image src="../../images/check-icon.png" class="tip-icon" bindload="onIconLoad" binderror="onIconError" data-name="check-icon"></image>
      <text class="tip-text">支持批量上传，自动优化清晰度</text>
    </view>
    <view class="tip-item">
      <image src="../../images/print-icon.png" class="tip-icon" bindload="onIconLoad" binderror="onIconError" data-name="print-icon"></image>
      <text class="tip-text">专为作业打印优化，效果更佳</text>
    </view>
  </view>

  <!-- 使用说明 -->
  <view class="usage-guide" wx:if="{{showGuide}}">
    <view class="guide-title">使用指南</view>
    <view class="guide-steps">
      <view class="step">
        <view class="step-number">1</view>
        <text class="step-text">选择作业照片</text>
      </view>
      <view class="step">
        <view class="step-number">2</view>
        <text class="step-text">自动优化处理</text>
      </view>
      <view class="step">
        <view class="step-number">3</view>
        <text class="step-text">下载打印</text>
      </view>
    </view>
  </view>
  <!-- 版本号底部展示（放在容器内） -->
  <view class="version-footer">
    <text>版本 v{{version || '1.4.2'}}</text>
  </view>
</view>