/* pages/index/index.wxss */

.container {
  padding: 40rpx;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90E2;
}

.subtitle {
  font-size: 28rpx;
  color: #888888;
  font-weight: 400;
}

/* 功能选项卡片 */
.upload-options {
  margin-bottom: 80rpx;
}

.option-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.1);
  transition: all 0.3s ease;
}

.option-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(74, 144, 226, 0.15);
}

.card-icon {
  margin-right: 32rpx;
}

.icon-large {
  width: 96rpx;
  height: 96rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #888888;
}

.card-arrow {
  margin-left: 16rpx;
}

.arrow {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 600;
}

/* 底部提示 */
.bottom-tips {
  margin-bottom: 60rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tip-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666666;
}

/* 使用指南 */
.usage-guide {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.guide-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

.guide-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #4A90E2;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.step-text {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .container {
    padding: 32rpx;
  }
  
  .option-card {
    padding: 32rpx;
  }
  
  .card-title {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.option-card {
  animation: fadeInUp 0.6s ease-out;
}

.option-card:nth-child(1) {
  animation-delay: 0.1s;
}

.option-card:nth-child(2) {
  animation-delay: 0.2s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 版本号底部展示 */
.version-footer {
  margin-top: 32rpx;
  padding: 24rpx 0;
  text-align: center;
  color: #888888;
  font-size: 24rpx;
}